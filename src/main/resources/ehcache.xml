<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<ehcache updateCheck="false">

	<diskStore path="user.dir/ehcache" />

	<cache 
		name="config_cache"
		eternal="true"
		diskPersistent="false"
		maxElementsInMemory="0"
		overflowToDisk="false"
		>
	</cache>

	<cache 
		name="data_source_cache"
		eternal="true"
		diskPersistent="false"
		maxElementsInMemory="0"
		overflowToDisk="false"
		>
	</cache>

	<cache 
		name="session_cache"
		eternal="false"
		diskPersistent="false"
		timeToIdleSeconds="100"
		timeToLiveSeconds="0"
		memoryStoreEvictionPolicy="LRU"
		maxElementsInMemory="100"
		maxElementsOnDisk="0"
		overflowToDisk="true"
		diskSpoolBufferSizeMB="20"
		>
	</cache>

	<cache 
		name="user_cache"
		eternal="false"
		diskPersistent="false"
		timeToIdleSeconds="100"
		timeToLiveSeconds="0"
		memoryStoreEvictionPolicy="LRU"
		maxElementsInMemory="100"
		maxElementsOnDisk="0"
		overflowToDisk="true"
		diskSpoolBufferSizeMB="20"
		>
	</cache>

	<cache 
		name="permissions_cache"
		eternal="false"
		diskPersistent="false"
		timeToIdleSeconds="100"
		timeToLiveSeconds="0"
		memoryStoreEvictionPolicy="LRU"
		maxElementsInMemory="100"
		maxElementsOnDisk="0"
		overflowToDisk="true"
		diskSpoolBufferSizeMB="20"
		>
	</cache>

